{% import "_includes/forms" as forms %}

{{ forms.autosuggestField({
    label: 'Limit To Subfolder'|t,
    instructions: 'Optional path of the subfolder, i.e. _subfolder/subfolder2_. Relative to Craft templates folder.'|t,
    id: 'limitToSubfolder',
    name: 'limitToSubfolder',
    value: settings.limitToSubfolder,
    suggestEnvVars: true,
    suggestAliases: true
})
}}

{{  forms.booleanMenuField({
    label: 'Show Friendly Option Values'|t,
    instructions: 'Show more readable option values (ex: Blog Listing vs. _blogListing.twig)'|t,
    name: 'friendlyOptionValues',
    value: settings.friendlyOptionValues,
    errors: field.getErrors('friendlyOptionValues'),
    includeEnvVars: true,
})
}}
